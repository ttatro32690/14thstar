<% include ../partials/header %>

<div class="jumbotron">
	<div class="container-fluid">
		<h1>Add New Beer</h1>	
	</div>
</div>
 
<div class="container">
	<form action="/beer/<%= beer._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="beerName">Name</label>
			<input type="text" class="form-control" name="beer[name]" id="beerName">
		</div>
		<div class="form-group">
			<label for="beerImage">Image</label>
			<input type="text" class="form-control" name="beer[image]" id="beerImage">
		</div>
		<div class="form-group">
			<label for="beerIbu">IBU</label>
			<input type="text" class="form-control" name="beer[ibu]" id="beerIbu">
		</div>
		<div class="form-group">
			<label for="beerAbv">ABV</label>
			<input type="text" class="form-control" name="beer[abv]" id="beerAbv">
		</div>
		<div class="form-group">
			<label for="beerStyle">Style</label>
			<input type="text" class="form-control" name="beer[style]" id="beerStyle">
		</div>
		<div class="form-group">
			<label for="beerAvail">Availability</label>
			<input type="text" class="form-control" name="beer[availability]" id="beerAvail">
		</div>
		<div class="form-group">
			<label for="beerDesc">Description</label>
			<textarea class="form-control" id="beerDesc" name="beer[description]" rows="3"></textarea>
		</div>
		<button type="submit" class="btn btn-primary btn-block">Update</button>
	</form>
</div>
 
<% include ../partials/footer %>