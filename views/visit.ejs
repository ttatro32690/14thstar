<% include ./partials/header %>

<div class="container">
    <div class="jumbotron">
	    <h1>Contact Information</h1>
    	<div class="row">
    		<div class="col-lg-6">
    			<div class="panel panel-default">
    				<div class="panel-heading">
    					<h2>Visit Us</h2>
    				</div>
    				<div class="panel-body">
    					<strong><%= star.name %><br></strong>
    					<%= star.street %> <%= star.apartment %><br>
    					<%= star.city %>, <%=star.state%> <%= star.postal %>
    				</div>
    			</div>
    			<div class="panel panel-default">
    				<div class="panel-heading"><h2>Contact Us</h2></div>
    				<div class="panel-body">
    					Phone: <%= star.phone %><br>
    					<a href="mailto:<%= star.email%>">Email Us: <%= star.email %></a>
    				</div>
    			</div>
    			<div class="panel panel-default">
    				<div class="panel-heading">
    					<h2>Taproom Hours</h2>
    				</div>
    				<div class="panel-body">
    					<%= star.openDays[0] + " - " + star.openDays[star.openDays.length-1] + ":"%>
    					<%= star.openTime + " - " + star.closeTime %>
    				</div>
    			</div>
    		</div>
    		<div class="col-lg-6">
    			<div class="panel panel-default">
    				<div class="panel-heading">
    					<h2>Map</h2>
    				</div>
    				<div class="panel-body"><iframe class="thumbnail embed-responsive-item" id="googlemap" src="https://maps.google.com/maps/ms?msa=0&amp;msid=206282674595745001876.0004dd68e27a8b1f46013&amp;ie=UTF8&amp;t=m&amp;ll=44.820264,-73.084037&amp;spn=0.007306,0.006888&amp;z=16&amp;output=embed" width="100%" height="480" frameborder="0" marginwidth="0" marginheight="0" scrolling="no"></iframe></div>
    			</div>
    		</div>
    	</div>
    </div>
</div>

<% include ./partials/footer %>