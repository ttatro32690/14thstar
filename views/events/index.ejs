<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <h1>Upcoming Events</h1>
        <a href="/events/new" class="btn btn-default">New Event</a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <% events.forEach(function(event){ %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><%= event.name %></h4>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="form-inline">
                                <div class="form-group">
                                   <form class="form-inline" action="/events/<%= event._id %>/edit" method="GET">
                                        <button class="btn btn-default">Edit</button>
                                    </form>
                                </div>
                                <div class="form-group">
                                   <form class="form-inline" action="/events/<%= event._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-default">Delete</button>
                                    </form> 
                                </div>
                                <div class="form-group">
                                   <form class="form-inline" action="/events/<%= event._id %>" method="GET">
                                        <button class="btn btn-default">View</button>
                                    </form> 
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <img class="thumbnail img-rounded" src="<%= event.image %>">
                                    </div>
                                    <div class="container-fluid">
                                        <div class="col-md-8 panel panel-default">
                                            <address>
                                                <strong>Date:</strong> <%= event.date.toDateString() %>W<br>
                                                <strong>Time:</strong> <%= event.beginTm %> - <%= event.endTm %><br>
                                                <strong>Location:</strong> <%= event.location %><br>
                                                <strong>Description:</strong> <%= event.description %>
                                            </address>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <% }); %>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<% include ../partials/footer %>